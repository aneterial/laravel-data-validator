{
    "name": "aneterial/laravel-data-validator",
    "description": "Laravel package for convenient validation and hydration of a request into DTO structures",
    "keywords": [
        "php",
        "laravel",
        "validation"
    ],
    "homepage": "https://github.com/aneterial/laravel-data-validator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Mironov",
            "email": "alexan9610@gmail.com",
            "homepage": "https://github.com/aneterial"
        }
    ],
    "autoload": {
        "psr-4": {
            "DataValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "laravel/framework": "^11"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.11",
        "friendsofphp/php-cs-fixer": "^3.58"
    }
}
